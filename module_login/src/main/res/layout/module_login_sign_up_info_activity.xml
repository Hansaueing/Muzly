<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/res_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/res_pure_gray"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="91pt"
            android:layout_height="91pt"
            android:layout_marginTop="35pt"
            android:src="@drawable/res_default_pho_reg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:background="@drawable/res_base_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44pt">

                <TextView
                    android:layout_width="113pt"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="14pt"
                    android:text="@string/email_address"
                    android:textColor="@color/res_word_color"
                    android:textSize="13pt" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14pt"
                    android:background="@null"
                    android:padding="4pt" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/res_border_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44pt">

                <TextView
                    android:layout_width="113pt"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="14pt"
                    android:text="@string/nick_name"
                    android:textColor="@color/res_word_color"
                    android:textSize="13pt" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14pt"
                    android:background="@null"
                    android:hint="@string/nick_name_hint"
                    android:textSize="12pt"
                    android:padding="4pt" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/res_border_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44pt">

                <TextView
                    android:layout_width="113pt"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="14pt"
                    android:text="@string/age"
                    android:textColor="@color/res_word_color"
                    android:textSize="13pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14pt">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="18pt"
                        android:src="@drawable/res_arrow_more" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/iv_1"
                        android:gravity="center_vertical"
                        android:paddingLeft="4pt"
                        android:textSize="12pt"
                        android:text="@string/age_hint" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/res_border_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44pt">

                <TextView
                    android:layout_width="113pt"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="14pt"
                    android:text="@string/gender"
                    android:textColor="@color/res_word_color"
                    android:textSize="13pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14pt"
                    android:padding="4pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/res_gender_icon_sel"
                        android:drawablePadding="4pt"
                        android:text="@string/women"
                        android:textSize="12pt"
                        android:textColor="@color/res_word_green_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="23pt"
                        android:drawableLeft="@drawable/res_gender_icon_sel_off"
                        android:drawablePadding="4pt"
                        android:text="@string/man"
                        android:textSize="12pt"
                        android:textColor="@color/res_word_gender_color" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/res_border_color" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>